<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="200.0" minWidth="300.0" prefHeight="680.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="core.About">
    <center>
        <TextArea fx:id="aboutText" disable="true" editable="false" prefHeight="200.0" prefWidth="200.0"
                  stylesheets="@About.css" wrapText="true" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </TextArea>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="GitHubButton" onAction="#GitHubPressed" text="GitHub" ButtonBar.buttonData="LEFT"/>
                <Button fx:id="closeButton" onAction="#closePressed" text="Close" ButtonBar.buttonData="RIGHT"/>
            </buttons>
            <BorderPane.margin>
                <Insets left="4.0" right="4.0"/>
            </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
