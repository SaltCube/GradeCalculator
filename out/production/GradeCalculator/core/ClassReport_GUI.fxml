<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="core.ClassReport">
	<bottom>
		<ButtonBar prefHeight="40.0" prefWidth="200.0">
			<buttons>
				<Button fx:id="reportSaveAs" onAction="#onReportSaveAs" text="Save As" ButtonBar.buttonData="LEFT" />
				<Button fx:id="reportPrint" disable="true" onAction="#onReportPrint" text="Print" ButtonBar.buttonData="RIGHT" />
			</buttons>
			<BorderPane.margin>
				<Insets left="4.0" right="4.0" />
			</BorderPane.margin>
		</ButtonBar>
	</bottom>
	<center>
		<TextArea fx:id="reportText" editable="false" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
	</center>
</BorderPane>
